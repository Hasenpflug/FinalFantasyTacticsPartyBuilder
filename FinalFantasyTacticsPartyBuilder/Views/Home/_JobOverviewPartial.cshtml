<div id="job-overview-container">
    <div id="job-selection-container">
        <div id='piemenu' data-wheelnav
             data-wheelnav-slicepath='DonutSlice'
             data-wheelnav-rotateon
             data-wheelnav-navangle="90"
             data-wheelnav-titleheight="100"
             data-wheelnav-titlewidth="70"
             data-wheelnav-cssmode
             data-wheelnav-init>
            @for (int i = 0; i < 20; i++)
            {
                <div data-wheelnav-navitemimg="/Content/Images/Jobs/Squire_Male_Standing.png"></div>
            }
        </div>
    </div>
    <div id="job-details-container" class="menu">
        <div id="job-details-level-container">
            <img src="~/Content/Images/level.png" />
            <img src="~/Content/Images/number_8.png" />
        </div>
        <span>Squire</span>
    </div>
    <div id="job-gender-container" class="menu">
        <span selected="true">Male Soldier</span>
        <span selected="false">Female Soldier</span>
    </div>
</div>
<div id="job-modifier-chart-container">
    <canvas id="job-modifier-chart"  class="menu"></canvas>
</div>
<div id="job-growth-chart-container">
    <canvas id="job-growth-chart"></canvas>
</div>
<div id="job-move-chart-container">
    <canvas id="job-move-chart"></canvas>
</div>
<div id="job-evasion-chart-container">
    <canvas id="job-evasion-chart"></canvas>
</div>
<script>
    var piemenu = new wheelnav('piemenu');
    piemenu.centerX = window.innerWidth / 2 - 50;
    piemenu.centerY = window.innerHeight / 3;
    piemenu.selectedPercent = 1.1;
    piemenu.hoverPercent = 1;
    piemenu.clockwise = false;
    piemenu.animatetime = 200;
    piemenu.maxPercent = 0.50;
    piemenu.animateeffect = 'linear';
    piemenu.createWheel();

    var modifierChartCanvas = document.getElementById('job-modifier-chart');
    var modifierChart = new Chart(modifierChartCanvas, {
        type: 'radar',
        data: {
            labels: ["HPM", "MPM", "SPM", "PAM", "MAM"],
            datasets: [{
                label: 'Job Stat Modifiers',
                data: [100, 80, 100, 110, 80],
                borderColor: 'purple',
                backgroundColor: 'red',
                pointBackgroundColor: 'white',
                pointBorderColor: 'yellow'
            }]
        }
    });

    var growthChartCanvas = document.getElementById('job-growth-chart');
    var growthChart = new Chart(growthChartCanvas, {
        type: 'radar',
        data: {
            labels: ["HPM", "MPM", "SPM", "PAM", "MAM"],
            datasets: [{
                label: 'Job Stat Modifiers',
                data: [100, 80, 100, 110, 80]
            }]
        }
    });

    var baseMoveJumpChartCanvas = document.getElementById('job-move-chart');
    var baseMoveJumpChart = new Chart(baseMoveJumpChartCanvas, {
        type: 'bar',
        data: {
            labels: ["Move", "Jump"],
            datasets: [{
                label: 'Job Stat Modifiers',
                data: [4, 3]
            }]
        }
    });

    var baseEvasionChartCanvas = document.getElementById('job-evasion-chart');
    var baseEvasionChart = new Chart(baseEvasionChartCanvas, {
        type: 'bar',
        data: {
            labels: ["Evasion"],
            datasets: [{
                label: 'Job Stat Growth',
                data: [5]
            }]
        }
    });
</script>