@using FinalFantasyTacticsPartyBuilder.View_Models
@model UnitOverviewViewModel

<div class="unit-details-container">
    <div id="unit-portrait-menu" class="menu">
        <img class="unit-portrait" src="@Model.JobPortraitPath" />
    </div>
    <div id="unit-details-status-container">
        <div id="unit-status-level-container">
            <img class="small-image" src="~/Content/Images/level.png" />
            <img src="~/Content/Images/number_@(Model.AttributeDigits.LevelDigits[0]).png" />
            <img src="~/Content/Images/number_@(Model.AttributeDigits.LevelDigits[1]).png" />
        </div>
        <div id="unit-status-experience-container">
            <img class="small-image" src="~/Content/Images/experience.png" />
            <img src="~/Content/Images/number_@(Model.AttributeDigits.ExperienceDigits[0]).png" />
            <img src="~/Content/Images/number_@(Model.AttributeDigits.ExperienceDigits[1]).png" />
        </div>
        <div id="unit-status-hp-container">
            <img class="small-image" src="~/Content/Images/hp.png" />
            <div class="value-bar"></div>
            @for (int i = 0; i < Model.AttributeDigits.HpDigits.Length; i++)
            {
                <img class="value upper-hp" src="~/Content/Images/number_@(Model.AttributeDigits.HpDigits[i]).png" />
            }
            <img class="divider" src="~/Content/Images/divider.png" />
            @for (int i = 0; i < Model.AttributeDigits.HpDigits.Length; i++)
            {
                <img class="value lower-hp" src="~/Content/Images/number_@(Model.AttributeDigits.HpDigits[i]).png" />
            }
        </div>
        <div id="unit-status-mp-container">
            <img class="small-image" src="~/Content/Images/mp.png" />
            <div class="value-bar"></div>
            @for (int i = 0; i < Model.AttributeDigits.MpDigits.Length; i++)
            {
                <img class="value upper-mp" src="~/Content/Images/number_@(Model.AttributeDigits.MpDigits[i]).png" />
            }
            <img class="divider" src="~/Content/Images/divider.png" />
            @for (int i = 0; i < Model.AttributeDigits.MpDigits.Length; i++)
            {
                <img class="value lower-mp" src="~/Content/Images/number_@(Model.AttributeDigits.MpDigits[i]).png" />
            }
        </div>
    </div>
    <div class="unit-details-name-container menu">
        <img id="unit-details-name-orb" src="~/Content/Images/blue_orb.png" />
        <div id="unit-details-name-rank-container">
            <img src="~/Content/Images/number_dark_@(Model.AttributeDigits.PositionDigits[0]).png" />
            <img src="~/Content/Images/number_dark_@(Model.AttributeDigits.PositionDigits[1]).png" />
        </div>
        <strong id="unit-details-name-name">@Model.UnitName</strong>
        <strong id="unit-details-name-job">@Model.JobName</strong>
        <div id="unit-details-name-brave-container">
            <span id="brave-header">Brave</span>
            <span>@Model.Brave</span>
        </div>
        <div id="unit-details-name-faith-container">
            <span id="faith-header">Faith</span>
            <span>@Model.Faith</span>
        </div>
    </div>
</div>
